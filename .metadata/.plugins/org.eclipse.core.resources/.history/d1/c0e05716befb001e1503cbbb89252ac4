package hey;

public class BasicThread implements Runnable
{   
	public void run() {
		System.out.println("calling another thread");
		for(int i=0 ;i<1000; i++) {
			System.out.println("the value is "+i);
		}
		
	}
	public static void main(String[] args) {
		System.out.println(" hiii");
		new BasicThread().run();
		
	}


}
