package hey;

class FirstClass extends Thread{
	public void run() {
		for( int i=0;i < 2;i++) {
			System.out.println("inside the first class "+i);
		}
	}
	
}
class Second  extends Thread{
	public void run() {
		for( int i=0 ;i< 2000;i++)

		{
			System.out.println("inside second class "+i);
		}
		method();
	}
	private void method() {
		System.out.println("hii this is method inside the class second ");
		
	}
	
}
class Third implements Runnable{
	public void run() {
	for( int i=0;i<2000;i++)
	{
		System.out.println("inside the third class ");
		
	}
	method();
}

	private void method () {
		System.out.println("calling the method from third class ");
		
	}
}


public class class2 {
public static void main(String[] args) {
	new FirstClass().start();
	new Second().start();
	Thread myThread= new Thread(new Third());
	myThread.start();
}

}
